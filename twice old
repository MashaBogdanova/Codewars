function twiceAsOld(dadYearsOld, sonYearsOld) {
if ( dadYearsOld == (sonYearsOld*2) ){
return 0;  
} else if ( (sonYearsOld * 2) < dadYearsOld ){
  let i = 0;
  while (  (sonYearsOld * 2) != dadYearsOld  ){
    i++;
    sonYearsOld +=1;
    dadYearsOld +=1;
  } 
  return i;
  }
  else {
    let i = 0;
 while (  (sonYearsOld * 2) != dadYearsOld  ){
    i++;
    sonYearsOld -=1;
    dadYearsOld -=1;
}
    return i;
}
}
